<% posts.each do |posts| %>  <!--@posts => posts-->
      <div class="d-flex justify-content-center">
          <div class="card border-warning mt-3 mb-5" style="width: 36rem;">
            <div class="card-header bg-transparent border-warning">
              <h3 class="text-danger">
                <% if admin_user_signed_in? %>
                  <%= link_to posts.genre.name, admin_genre_path(posts.genre) %>
                <% else %>
                  <%= link_to posts.genre.name, genre_public_admin_posts_show_path(posts.genre) %>
                <% end %>
              </h3>
            </div>
              <div class="card-body">
                  <h4 class="card-text-title"><%= link_to posts.title,admin_post_path(posts) %></h4>
                  <p class="card-text"><%= simple_format posts.body %></p>
                  <p class="card-text">
                    <% if admin_user_signed_in? %>
                    <div>ユーザーへの公開設定</div>
                       <% if posts.is_show %>
                         <p class="text-success">"公開中"</p>
                       <% else %>
                        <p class="text-danger">"非公開"</p>
                      <% end %>
                     <% end %>
                  </p>
                  <div>
                    <p class="img"><%= attachment_image_tag posts,:image, size:"500x315" %></p>
                  </div>

                  <% if posts.youtube_url.present? %>
                    <div class="youtube">
                      <iframe width="500" height="315" src="https://www.youtube.com/embed/<%= posts.youtube_url.last(11)%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                  <% end %>
              </div>
            <div class="card-footer bg-transparent warning">
              <div>
                <span class="mr-3">投稿日: <%= posts.created_at.strftime('%Y/%m/%d %H:%M') %></span>
             </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="d-flex justify-content-center">
        <div class="page mb-5">
          <%= paginate posts %> <!--@posts => posts-->
        </div>
      </div>