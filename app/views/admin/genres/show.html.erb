  <div class ="container">
    <div class="box mt-3">
      <h2 class="admin-title mt-5"><%= @genre.name %>一覧</h2>
      <div class="link mt-3">
        <%= link_to "情報一覧に戻る", admin_posts_path, class:"btn btn-outline-primary mr-3" %>
      </div>

    <% if @posts == [] %>
       <div class="box mt-3">
         <div class="no-genre-text">
            <h2 class="mt-5">現在<%= @genre.name %>に関する情報はありません</h2>
         </div>
       </div>
    <% else %>
      <% @posts.each do |posts| %>
       <div class="admin-post-index">
          <% @posts.each do |posts| %>
            <div class="l-wrapper">
              <div class="card">
                <%= render partial: "admin/admin_posts/admin_posts_header", locals:{posts: posts} %>
                <%= render partial: "admin/admin_posts/admin_posts_main", locals:{posts: posts} %>
                <%= render partial: "admin/admin_posts/admin_posts_footer", locals:{posts: posts} %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
      <div class="d-flex justify-content-center">
        <div class="page mb-5">
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
