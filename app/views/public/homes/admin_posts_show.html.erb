  <div class ="container">
    <div class="box mt-3">
      <!--タイトル　一覧に戻るボタン-->
      <h2 class="admin-title mt-5"><%= @genre.name %>一覧</h2>
      <div class="link mt-3">
          <%= link_to "スポーツクラブからの情報一覧に戻る", public_admin_posts_path, class:"btn btn-outline-primary mr-3" %>
      </div>

      <!--施設からの投稿のジャンル一覧-->
      <% if @posts == [] %>
       <div class="box mt-3">
         <div class="no-genre-text mt-5">
          <h1>現在<%= @genre.name %>に関する情報はありません</h1>
         </div>
       </div>
      <% else %>
      <div class="admin-post-show">
        <% @posts.each do |posts| %>
          <div class="l-wrapper">
            <div class="card">
              <%= render partial: "admin/admin_posts/admin_posts_header", locals:{posts: posts} %>
              <%= render partial: "admin/admin_posts/admin_posts_main", locals:{posts: posts} %>
              <%= render partial: "admin/admin_posts/admin_posts_footer", locals:{posts: posts} %>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
      <div class="d-flex justify-content-center">
        <div class="page mb-5">
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
