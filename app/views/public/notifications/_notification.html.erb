<% visitor = notification.visitor %>
<% visited = notification.visited %>
  <% if notification.checked == false %>
  <!--未読（check = falese)のメッセージのみ表示-->
    <div class="mt-3">
      <%= link_to customer_path(visitor) do %>
        <%= visitor.username %>さん
      <% end %>
      <% if notification.action == 'message' %>
        からメッセージを受け取りました
      <% end %>
      <div class="mt-1">
        <%= link_to "トークルームへ",chat_path(visitor.id), class: "btn btn-outline-warning btn-sm" %>
      <span>
        <%= link_to '既読にする',notification_path(notification.id),method: :put, class: "btn btn-outline-danger btn-sm" %>
      </span>
      </div>
    </div>
  <% end %>