  <div class ="container">
    <div class="box mt-3">
      <h2 class="title mt-5">情報の共有の投稿一覧</h2>
        <div class="dropdown" style="margin: 0 auto;">
        <button class="btn btn-secondary dropdown-toggle mt-3" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
          ジャンルごとの投稿一覧
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <li class="ml-2"><%= link_to "投稿一覧に戻る", posts_path %></li>
          <li class="mt-3 ml-2"><%= link_to "食事一覧", posts_eat_path%></li>
          <li class="mt-3 ml-2"><%= link_to "トレーニング一覧", posts_training_path %></li>
        </ul>
        </div>
      <div class="post-index">
        <% @posts.each do |posts| %>
          <div class="l-wrapper">
            <div class="card">
              <%= render partial: "public/posts/post_header", locals:{posts: posts} %>
              <%= render partial: "public/posts/post_main", locals:{posts: posts} %>
              <%= render partial: "public/posts/post_footer", locals:{posts: posts} %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>