<div class="container">
  <div class="box mt-3">
    <h2 class="admin_title">パスワードを忘れた方へ</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "admin_users/shared/error_messages", resource: resource %>

    <div class="field mt-3">
      <div class="label">
        <%= f.label :"メールアドレス" %>
      </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",size:"40x20" %>
      </div>

     <div class="actions mt-3 mb-3">
        <%= f.submit "パスワードのリセットメールを送信します", class: "btn btn-warning" %>
     </div>
     <% end %>

    <%= render "admin_users/shared/links" %>
  </div>
</div>

