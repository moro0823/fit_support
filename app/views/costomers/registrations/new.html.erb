<div class="container">
  <div class="box mt-3">
    <h2 class="title-down">アカウント新規作成</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "costomers/shared/error_messages", resource: resource %>

    <div class="field mt-3">
      <div class="label">
        <%= f.label :"ユーザー名" %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username",size:"30x20" %>
      </div>
    </div>

    <div class="field mt-3">
      <div class="label">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",size:"40x20" %>
      </div>
    </div>

    <div class="field mt-3">
      <div class="label">
       <%= f.label :"パスワード（６文字以上)" %>
       <% if @minimum_password_length %>
       <% end %><br />
       <%= f.password_field :password, autocomplete: "new-password",size:"30x20" %>
      </div>
    </div>

    <div class="field mt-3">
      <div class="label">
        <%= f.label :"パスワード再確認" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",size:"30x20" %>
      </div>
    </div>

    <div class="actions mt-5 mb-5">
      <%= f.submit "アカウント作成", class: "btn btn-primary btn-lg" %>
    </div>
    <% end %>

    <div class="down">
      <%= render "costomers/shared/links" %>
    </div>
  </div>
</div>

